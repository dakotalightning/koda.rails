<%= form_for [:admin,page] do |page_form| %>

  <%= render partial: "shared/errors", locals: { object: page_form.object } %>

  <div class="form-group">
    <%= page_form.label :title %>
    <%= page_form.text_field :title, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= page_form.label :content, "Markdown" %>
        <%= page_form.text_area :content, rows: 25, class: "form-control"  %>
      </div>
    </div>
    <div class="col-md-6">
      <label for="markdown">Preview</label>
      <div id="markdown">
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= page_form.submit class: "btn btn-primary" %>
  </div>

<% end %>
