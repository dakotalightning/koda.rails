<% if pages.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-condensed table-hover table-categories">
      <thead>
        <th>Name</th>
        <th style="width: 114px;"></th>
      </thead>
      <tbody>
        <% pages.each do |page| %>
          <tr>
            <td><%= link_to page.title, admin_page_path(page) %></td>
            <td>
              <%= link_to "Edit", edit_admin_page_path(page), class: "btn btn-info btn-sm" %>
              <%= link_to "Delete", admin_page_path(page), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Are you sure?" }  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info clearfix">No pages, add some! :)
    <%= link_to "Create a Page", new_admin_page_path, class:"btn btn-default pull-right" %>
  </div>
<% end %>
